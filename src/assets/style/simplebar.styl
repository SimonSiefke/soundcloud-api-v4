:root
  --simple-bar-width 3px
  --simple-bar-color 'rgb(%s)' % var(--divider-line-color-darker)

@media screen and (min-width: 500px)
  :root
    --simple-bar-width 20px

@media screen and (min-width: 500px)
  :root
    --simple-bar-width 5px

@media screen and (min-width: 800px)
  :root
    --simple-bar-width 15px

[data-simplebar]
  overflow hidden !important
  position relative
  z-index 0
  max-height inherit
  -webkit-overflow-scrolling touch /* Trigger native scrolling for mobile, if not supported, plugin is used. */

[data-simplebar='init']
  display flex

[data-simplebar] .simplebar-scroll-content, [data-simplebar] .simplebar-content
  overflow hidden

[data-simplebar='init'] .simplebar-scroll-content, [data-simplebar='init'] .simplebar-content
  overflow scroll

.simplebar-scroll-content
  box-sizing content-box !important
  overflow-x hidden !important
  min-width 100% !important
  max-height inherit !important

.simplebar-content
  box-sizing border-box !important
  overflow-y hidden !important
  min-height 100% !important

.simplebar-track
  pointer-events none
  position absolute
  z-index 1
  width var(--simple-bar-width)
  right 0
  bottom 0
  // background green

.simplebar-track:hover .simplebar-scrollbar:before
  opacity 1

.simplebar-scrollbar
  position absolute
  width var(--simple-bar-width)
  right 0
  min-height 150px

.simplebar-scrollbar.visible
  pointer-events all

.simplebar-scrollbar:before
  content ''
  opacity 0
  position absolute
  right 0
  left 0
  border-radius 7px
  background var(--simple-bar-color)
  transition opacity 0.2s linear

.simplebar-track .simplebar-scrollbar.visible:before
  /* When hovered, remove all transitions from drag handle */
  opacity 0.5
  transition opacity 0 linear

.simplebar-track.vertical
  top 0

.simplebar-track.vertical .simplebar-scrollbar:before
  top 0
  bottom 0
