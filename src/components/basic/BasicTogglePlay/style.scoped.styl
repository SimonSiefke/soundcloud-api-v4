$offset = 22.5px
$size = 55px

button
  align-items center
  background var(--controlbar-icon-enabled-background)
  border 2px solid transparent
  border-radius 50%
  bottom $offset
  box-sizing border-box
  display flex
  height $size
  justify-content center
  position fixed
  right $offset
  width $size
  z-index 4

  svg
    fill var(--controlbar-icon-enabled-color)

.navigation--tab button:focus
  border-color var(--element-focus-outline-color)
